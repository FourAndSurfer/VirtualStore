<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victo.virtualstore.PagamentoActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        android:orientation="vertical">

        <Button
            android:id="@+id/btComprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="144dp"
            android:layout_weight="0.28"
            android:text="Comprar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTotal" />

        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nome"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/etNome"
            android:layout_width="201dp"
            android:layout_height="41dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="João da Silva"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/totalTextView"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="204dp"
            android:digits="QWERTYUIOPASDFGHJKLÇZXCVBNMqwertyuiopasdfghjklzxcvbnm "/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Número do Cartão"
            app:layout_constraintTop_toBottomOf="@+id/etNome"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/etNumCartao1"
            android:layout_width="52dp"
            android:layout_height="43dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="1234"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="264dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Pagamento"
            android:textSize="23dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="76dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Venc."
            app:layout_constraintTop_toBottomOf="@+id/etNumCartao1"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/etMes"
            android:layout_width="39dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="12"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="314dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="14dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="8dp"
            android:text="/"
            android:textSize="25dp"
            app:layout_constraintLeft_toRightOf="@+id/etMes"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            tools:layout_editor_absoluteY="327dp" />

        <EditText
            android:id="@+id/etAno"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="21"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toRightOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="CVV"
            app:layout_constraintTop_toBottomOf="@+id/etMes"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/etCvv"
            android:layout_width="73dp"
            android:layout_height="45dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="123"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="372dp" />

        <Button
            android:id="@+id/btListar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:onClick="btnlistar"
            android:text="Listar Transações"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btComprar" />

        <EditText
            android:id="@+id/etNumCartao4"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-1dp"
            android:ems="10"
            android:hint="1234"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toRightOf="@+id/etNumCartao3"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/etNumCartao3"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-1dp"
            android:ems="10"
            android:hint="1234"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toRightOf="@+id/etNumCartao2"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/etNumCartao2"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:layout_marginLeft="-7dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:hint="1234"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toRightOf="@+id/etNumCartao1"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:layout_editor_absoluteY="270dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Valor Total"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCvv"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:textSize="20sp"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
